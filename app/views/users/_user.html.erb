<% @users.each do |user| %>

<div class="card text-center m-4 shadow-sm mb-5">
    <div class="card-header font-italic">
        <%= link_to user.username, user_path(user)%>
    </div>
    <div class="card-body">
        <%= gravatar_for(user, size:200)%>
        <br>
        <h5 class="card-title"><%= pluralize(user.articles.count, "article") %> </h5>
        
        <%= link_to "View profile", user_path(user), class: "btn btn-outline-success" %>
        <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-primary" %>
        
       
    </div>
    <div class="card-footer text-muted">
       <small>Joined <%= time_ago_in_words(user.created_at)%> ago</small>
    </div>
</div>
<% end %>