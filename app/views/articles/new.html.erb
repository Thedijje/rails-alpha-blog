<h2>Create new Article</h2>
<hr>
<% if @article.errors.any? %>
    <h4>Following errors prevented article in saving</h4>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>
<%= form_with scope: :article, url: articles_path, local:true do |f| %>
    <p>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %>
        <br>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
<p>
    <%= link_to 'Return to listing', articles_path %>
</p>