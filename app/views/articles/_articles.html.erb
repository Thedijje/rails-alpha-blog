<% @articles.each do |article| %>
<div class="card text-center m-4 shadow-sm mb-5">
    <div class="card-header font-italic">
        By <%= link_to article.user.username, user_path(article.user) %>
    </div>
    <div class="card-body">
        
        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success"  %></h5>
        <img src="https://picsum.photos/800/300?random=<%= rand(1..100)%>" style="width:100%" height="300">
        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
        
        <%= link_to "View", article, class: "btn btn-outline-success" %>
        <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
        <%= link_to "Delete", article_path(article), method: :delete, class: "btn btn-outline-danger", data: {confirm: "Are you sure?"} %>
        
    </div>
    <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(article.created_at);%> ago,</small>
        <small>Edited <%= time_ago_in_words(article.updated_at);%> ago</small>
    </div>
</div>
<% end %>